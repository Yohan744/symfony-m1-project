{% extends 'base.html.twig' %}

{% block title %}Sign in{% endblock %}

{% block body %}

	<main id="form">

		<img src="{{ asset('images/themes/plain.jpg') }}" class="background" alt="background image of the game">

		<h1>Sign in</h1>

		{% if app.user %}
			<div class="logged">
				You are logged in as {{ app.user.userIdentifier }}.
				<a href="{{ path('app_logout') }}">Log out</a>
			</div>
		{% endif %}

		<div class="global-wrapper">

			<form method="post">

				<div>
					<label for="inputEmail">Email</label>
					<input type="email" value="{{ last_username }}" name="email" id="inputEmail" placeholder="example@gmail.com" class="form-control" autocomplete="email" required>
				</div>

				<div>
					<label for="inputPassword">Password</label>
					<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
				</div>

				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				<button class="btn btn-lg btn-primary" type="submit">
					Sign in
				</button>

				{% if error %}
					<p class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</p>
				{% endif %}

			</form>

		</div>

		<div class="text">

			<p>No account yet ?</p>
			<a href="{{path('app_register')}}">Sign up</a>

		</div>

	</main>

{% endblock %}
