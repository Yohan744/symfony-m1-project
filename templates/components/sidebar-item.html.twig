<div class="sideBar-item">

	<div class="left-part">

		<h3 class="name">{{building.name}}</h3>

		<div>
			<h4 class="cost">Cost : {{building.currentState.upgradeCost}} <img src="{{ asset('images/game/coin.png') }}" alt="coins"></h4>
			<a href='{{path('app_game_build', { 'buildId': building.id })}}'>Click to build</a>
		</div>

	</div>

	<div class="right-part">
		<img src="{{ asset(building.currentState.image) }}" alt="image">
	</div>

</div>
